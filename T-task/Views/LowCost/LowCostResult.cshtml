@{
    ViewBag.Title = "Low Cost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>Загальна вартість перевезень стекол згідно з оптимальним планом: <b>@ViewBag.Result тис. грн.</b></p>
@for (int i = 0; i < ViewBag.Matrix.Length; i++)
{
    for (int j = 0; j < ViewBag.Matrix[i].Length; j++)
    {
        if (ViewBag.Matrix[i][j] != 0)
        {
            if (i == 0 && j == 0)
            {
                <p>З Києва до "Житлобуду-1": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 0 && j == 1)
            {
                <p>З Києва до "Житлобуду-2": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 0 && j == 2)
            {
                <p>З Києва до "Петрівського кварталу": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 0 && j == 3)
            {
                <p>З Києва до "Інерхол буду": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 0 && j >= 4)
            {
                <p>З Києва до "Компанії @(j + 1)": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 1 && j == 0)
            {
                <p>Зі Львова до "Житлобуду-1": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 1 && j == 1)
            {
                <p>Зі Львова до "Житлобуду-2": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 1 && j == 2)
            {
                <p>Зі Львова до "Петрівського кварталу": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 1 && j == 3)
            {
                <p>Зі Львова до "Інерхол буду": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 1 && j >= 4)
            {
                <p>Зі Львова до "Компанії @(j + 1)": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 2 && j == 0)
            {
                <p>З Харкова до "Житлобуду-1": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 2 && j == 1)
            {
                <p>З Харкова до "Житлобуду-2": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 2 && j == 2)
            {
                <p>З Харкова до "Петрівського кварталу": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 2 && j == 3)
            {
                <p>З Харкова до "Інерхол буду": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i == 2 && j >= 4)
            {
                <p>З Харкова до "Компанії @(j + 1)": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i >= 3 && j == 0)
            {
                <p>З Міста @(i + 1) до "Житлобуду-1": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i >= 3 && j == 1)
            {
                <p>З Міста @(i + 1) до "Житлобуду-2": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i >= 3 && j == 2)
            {
                <p>З Міста @(i + 1) до "Петрівського кварталу": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i >= 3 && j == 3)
            {
                <p>З Міста @(i + 1) до "Інерхол буду": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
            if (i >= 3 && j >= 4)
            {
                <p>З Міста @(i + 1) до "Компанії @(j + 1)": <b>@ViewBag.Matrix[i][j] тис. стекол.</b></p>
            }
        }
    }
}