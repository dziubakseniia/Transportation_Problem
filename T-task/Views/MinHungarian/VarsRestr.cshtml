@model T_task.Models.Hungarian

@{
    ViewBag.Title = "Min Hungarian Method";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
<h3>Розподілити роботи між програмістами, щоб загальна кількість людино-днів, витрачена на виконання всіх замовлень, була мінімальною:</h3>
    <div class="col-4 d-inline-block">@Html.Label("Уведіть кількість програмістів:")</div>
    <div class="d-inline-block">@Html.TextBoxFor(x => Model.Restrictions, null, new { @class = "form-control", placeholder = "programmers" })</div>
    <br />
    <br />
    <div class="col-4 d-inline-block">
        @Html.Label("Уведіть кількість замовлень:")
    </div>
    <div class="d-inline-block">@Html.TextBoxFor(x => Model.Variables, null, new { @class = "form-control" })</div>
    <br />
    <br /><div class="col-9 mx-auto"><input type="submit" value="Скласти задачу" class="btn btn-success" /></div>
}