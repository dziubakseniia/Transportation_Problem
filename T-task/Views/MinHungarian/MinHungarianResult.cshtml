                }
                if (i == 3 && j == 0)
                {
                    <p>Петріву програму "Блог".</p>
                }
                if (i == 3 && j == 1)
                {
                    <p>Петріву програму "Словник".</p>
                }
                if (i == 3 && j == 2)
                {
                    <p>Петріву програму "Карти".</p>
                }
